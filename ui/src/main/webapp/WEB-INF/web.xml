<?xml version="1.0" encoding="UTF-8"?>
<web-app
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0"
>
	<display-name>Servlet 3.0 Web Application</display-name>
	<context-param>
		<param-name>com.sun.faces.enableRestoreViewCompatibility</param-name>
		<param-value>true</param-value>
	</context-param>
	<servlet>
		<servlet-name>jsonservlet_add_product_to_cart</servlet-name>
		<servlet-class>com.license.servlets.AddProductToCartServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>jsonservlet_add_product_to_cart</servlet-name>
		<url-pattern>/jsonservlet/add_product_to_cart</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>jsonservlet_remove_product_from_cart</servlet-name>
		<servlet-class>com.license.servlets.RemoveProductFromCartServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>jsonservlet_remove_product_from_cart</servlet-name>
		<url-pattern>/jsonservlet/remove_product_from_cart</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>jsonservlet_get_cart_products</servlet-name>
		<servlet-class>com.license.servlets.GetCartProductsServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>jsonservlet_get_cart_products</servlet-name>
		<url-pattern>/jsonservlet/get_cart_products</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>jsonservlet_get_cart_list</servlet-name>
		<servlet-class>com.license.servlets.GetCartListServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>jsonservlet_get_cart_list</servlet-name>
		<url-pattern>/jsonservlet/get_cart_list</url-pattern>
	</servlet-mapping>
	<!-- <servlet> <servlet-name>Faces Servlet</servlet-name> <servlet-class>javax.faces.webapp.FacesServlet</servlet-class> <load-on-startup>1</load-on-startup> </servlet> <servlet-mapping> <servlet-name>Faces Servlet</servlet-name> <url-pattern>*.xhtml</url-pattern> </servlet-mapping> -->
</web-app>